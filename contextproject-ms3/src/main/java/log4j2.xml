<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
  <Appenders>
    <Console name="Console" target="SYSTEM_OUT">
      <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
    </Console>
    <File name="ErrorFile" fileName="target/Error.log" append = "false">
        <PatternLayout pattern="%d{yyyy-mm-dd HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
    </File>  
    <File name="DebugFile" fileName="target/Debug.log" append = "false">
        <PatternLayout pattern="%d{yyyy-mm-dd HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
    </File>  
     <File name="File" fileName="target/all.log" append = "false">
        <PatternLayout pattern="%d{yyyy-mm-dd HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
    </File> 
  </Appenders>
  <Loggers>
      <Logger name = "Error-log" additivity="TRUE" level = "trace">
      <AppenderRef ref = "Console"/>
      <AppenderRef ref = "ErrorFile"/>
      </Logger>
      <Logger name = "Debug-log" additivity="TRUE" level = "trace">
      <AppenderRef ref = "DebugFile"/>
      </Logger>
      <Root level="trace">
      <AppenderRef ref="File"/>
      <AppenderRef ref= "Console"/>
      </Root>
  </Loggers>
</Configuration>
